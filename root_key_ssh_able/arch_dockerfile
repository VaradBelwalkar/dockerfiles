FROM archlinux

RUN pacman -Sy --noconfirm && pacman -S --noconfirm nano git curl openssh sudo && echo 'root:password' | chpasswd && echo "PasswordAuthentication no" >> /etc/ssh/sshd_config && mkdir /root/.ssh && touch /root/.ssh/authorized_keys  && chsh -s /bin/bash

CMD ["service","ssh","start","-D"]	
