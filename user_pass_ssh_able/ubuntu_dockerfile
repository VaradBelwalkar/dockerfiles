FROM ubuntu
ENV DEBIAN_FRONTEND noninteractive
USER root
RUN apt-get update && apt-get install nano rsync iproute2 openssh-client git curl openssh-server sudo -y && useradd -m user && usermod -aG sudo user && echo 'user:password' | chpasswd && echo "PasswordAuthentication yes" >> /etc/ssh/sshd_config && apt-get clean && chsh -s /bin/bash
USER user
RUN mkdir /home/user/.ssh && touch /home/user/.ssh/authorized_keys 
USER root
CMD ["service","ssh","start","-D"]	
